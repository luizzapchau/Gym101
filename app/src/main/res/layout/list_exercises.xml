<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/llDay"
        android:layout_width="match_parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/tvExerciseDay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="center_horizontal"
            android:text="@string/a_caps"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tvExerciseMachineNumber"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="99"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExerciseMachineName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tvExerciseMachineNumber"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingStart="16dp"
            android:paddingEnd="5dp"
            android:text="Machine name"
            android:textColor="@color/colorPrimaryText"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExerciseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-2"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
